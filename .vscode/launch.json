{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Current Script (ts-node)",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--require", "ts-node/register"],
        "program": "${file}",
        "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
        "env": {
          "TS_NODE_PROJECT": "tsconfig.json"
        },
      }
    ],
  }